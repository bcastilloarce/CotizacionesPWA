// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "redis"
  url      = env("KV_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  quotes    Quote[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Quote {
  id              String    @id @default(cuid())
  client          String
  brand           String
  model           String
  year            Int?
  licensePlate    String?
  date            DateTime  @default(now())
  duration        String
  untilStockLasts Boolean   @default(false)
  availability    String?
  products        Product[]
  totalWithTax    Float
  user            User      @relation(fields: [userId], references: [id])
  userId          String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Product {
  id        String   @id @default(cuid())
  name      String
  quantity  Int
  unitPrice Float
  subtotal  Float
  quote     Quote    @relation(fields: [quoteId], references: [id])
  quoteId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
